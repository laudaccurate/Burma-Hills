extends dashboard-layout.pug

block main
  // End Navbar
  .panel-header.panel-header-sm
  .content
    .row
      .col-md-12
        .card.card-tasks
          .card-header
            h5.card-category Burma-Hills
            .card-layer
              h4.card-title Upcoming Events
              button#notify-modal.btn.btn-success.btn-round(type='button',  data-toggle='modal', data-target='.bd-example-modal-lg')
                i.now-ui-icons.ui-1_send
                | &nbsp Create Event
              .modal.fade.bd-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='notify-modal', aria-hidden='true')
                .modal-dialog.modal-lg
                  .modal-content
                    .modal-header
                      h5#exampleModalLabel.modal-title New Event
                      button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    .modal-body
                      form(method='post', action='#')
                        .row
                          .col
                            .input-group
                              .input-group-prepend
                                .input-group-text
                                  i.now-ui-icons.shopping_tag-content
                              input.form-control(type='text', placeholder='Event Title or Description')
                          .col
                            .input-group
                              .input-group-prepend
                                .input-group-text
                                  i.now-ui-icons.travel_istanbul
                              input.form-control(type='text', placeholder='Venue')
                        br
                        .row
                          .col
                            .input-group
                              .input-group-prepend
                                .input-group-text
                                  i.now-ui-icons.ui-1_calendar-60
                              input.form-control.date-picker(type='text', value="12/12/2012" data-datepicker-color='success')
                          .col
                            .input-group
                              .input-group-prepend
                                .input-group-text
                                  i.now-ui-icons.business_money-coins
                              input.form-control(type='text', placeholder='Rate')
                        .row
                          .col-md-6
                            input#event-flyer(type="file", name="event-flyer" hidden)
                            button#event-flyer-btn.btn.btn-warning.btn-round(type='button') 
                              i.now-ui-icons.design_image
                              | &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp Upload Event Flyer / Invaitation Card &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp

                    .modal-footer
                      button.btn.btn-primary.btn-round(type='button') 
                        i.now-ui-icons.location_pin
                        | &nbsp Add Location
                      button.btn.btn-success.btn-round(type='button') 
                        i.now-ui-icons.ui-1_send
                        | &nbsp Add Event
          .card-body
            .table-full-width.table-responsive
              table.table
                thead
                  th 
                  th Event
                  th Date
                  th Venue
                  th Rate
                  th Created By
                tbody
                  tr
                    td
                      .form-check
                        label.form-check-label
                          input.form-check-input(type='checkbox')
                          span.form-check-sign
                    td.text-left Naming Ceremony at House No. 887/6
                    td.text-left 25th December,2018
                    td.text-left Community Library
                    td.text-left Free
                    td.text-left Mr. Shaker
                    td.td-actions.text-right
                      a.btn.btn-danger.btn-round.btn-icon.btn-icon-mini.btn-neutral(href='#' data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom")
                        i.now-ui-icons.location_pin
                      a.btn.btn-success.btn-round.btn-icon.btn-icon-mini.btn-neutral(href='#', data-toggle='tooltip', data-placement='bottom' title='Confirm Attendance', data-original-title='Confirm Attendance')
                        i.now-ui-icons.ui-2_like
                      a.btn.btn-info.btn-round.btn-icon.btn-icon-mini.btn-neutral(href='#', data-toggle='tooltip', data-placement='bottom' title='View Flyer', data-original-title='View Flyer')
                        i.now-ui-icons.media-1_album
                  