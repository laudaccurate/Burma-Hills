extends dashboard-layout.pug

block main
  // End Navbar
  .panel-header.panel-header-sm
  .content
    .row
      .col-md-8
        .card
          .card-header
            h5.title Edit Profile
          .card-body
            form
              .row
                .col-md-5.pr-1
                  .form-group
                    label Company (disabled)
                    input.form-control(type='text', disabled='', placeholder='Company', value='Creative Code Inc.')
                .col-md-3.px-1
                  .form-group
                    label Username
                    input.form-control(type='text', placeholder='Username', value='michael23')
                .col-md-4.pl-1
                  .form-group
                    label(for='exampleInputEmail1') Email address
                    input.form-control(type='email', placeholder='Email')
              .row
                .col-md-6.pr-1
                  .form-group
                    label First Name
                    input.form-control(type='text', placeholder='Company', value='Mike')
                .col-md-6.pl-1
                  .form-group
                    label Last Name
                    input.form-control(type='text', placeholder='Last Name', value='Andrew')
              .row
                .col-md-12
                  .form-group
                    label Address
                    input.form-control(type='text', placeholder='Home Address', value='Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09')
              .row
                .col-md-4.pr-1
                  .form-group
                    label City
                    input.form-control(type='text', placeholder='City', value='Mike')
                .col-md-4.px-1
                  .form-group
                    label Country
                    input.form-control(type='text', placeholder='Country', value='Andrew')
                .col-md-4.pl-1
                  .form-group
                    label Postal Code
                    input.form-control(type='number', placeholder='ZIP Code')
              .row
                .col-md-12
                  .form-group
                    label About Me
                    textarea.form-control(rows='4', cols='80', placeholder='Here can be your description', value='Mike') Lamborghini Mercy, Your chick she so thirsty, I&apos;m in that two seat Lambo.
      .col-md-4
        .card.card-user
          .image
            img(src='../assets/img/bg5.jpg', alt='...')
          .card-body
            .author
              a(href='#')
                img.avatar.border-gray(src='../assets/img/default-avatar.png', alt='...')
                h5.title #{user.fullName}
              p.description #{user.bio}
            p.description.text-center
              br
              br
          hr
          .button-container
            button.btn.btn-neutral.btn-icon.btn-round.btn-lg(href='#')
              i.fab.fa-facebook-f
            button.btn.btn-neutral.btn-icon.btn-round.btn-lg(href='#')
              i.fab.fa-twitter
            button.btn.btn-neutral.btn-icon.btn-round.btn-lg(href='#')
              i.fab.fa-google-plus-g